<div id="brand">
  <% cache ["brand", @brand.updated_at] do %>
    <%= link_to root_path, class: "flex items-center space-x-3 rtl:space-x-reverse" do %>
      <%= render TendrilTasks::Logo.new %>
      <% if @brand.display_name? %>
        <span class="bg-blue-100 text-blue-800 text-md sm:text-2xl font-normal sm:font-extrabold px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 truncate overflow-hidden">
          <%= @brand.name.presence || "Tendril Tasks" %>
        </span>
      <% end %>
    <% end %>
  <% end %>
</div>
