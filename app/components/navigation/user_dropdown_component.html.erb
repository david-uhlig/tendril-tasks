<%# Avatar image %>
<%= render Navigation::UserDropdown::AvatarComponent.new(
      @user,
      size: :medium,
      class: "p-0.5 sm:h-14 sm:w-14 bg-gradient-to-br from-blue-500 to-purple-600 drop-shadow"
) %>
<%# Dropdown menu %>
<div id="userDropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700 dark:divide-gray-600">
  <div class="px-4 py-3 text-sm text-gray-900 dark:text-white space-y-1">
    <div><%= @user.name %></div>
    <div><%= render RoleBadgeComponent.new(@user, size: :extra_small) %></div>
  </div>
  <% if links? %>
    <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="avatarButton">
      <% links.each do |link| %>
        <li><%= link %></li>
      <% end %>
    </ul>
  <% end %>
  <% if admin_links? %>
    <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="avatarButton">
      <% admin_links.each do |link| %>
        <li><%= link %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="py-1">
    <%= link_to "Abmelden", destroy_user_session_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white", data: { "turbo-method": :delete } %>
  </div>
</div>
