<%= link_to @href, class: "flex items-center space-x-3 rtl:space-x-reverse" do %>
  <%= image_tag(@src, class: "h-11 mb-1", alt: @alt) if logo_present? %>
  <span class="bg-blue-100 text-blue-800 text-lg sm:text-2xl font-normal sm:font-extrabold me-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ms-2">
    <%= application_label %>
  </span>
<% end %>
