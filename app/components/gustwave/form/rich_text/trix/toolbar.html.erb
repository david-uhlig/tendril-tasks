<%= tag.div **@options do %>
  <%= render Gustwave::Form::RichText::Toolbar.new(tag: :"trix-toolbar",
                                                   id: @id) do
  %>
    <% @actions.each do |action| %>
      <% case action %>
      <% when :divider %>
        <%= render Gustwave::Form::RichText::Divider.new %>
      <% when :link %>
        <%= render Gustwave::Form::RichText::Trix::LinkToggle.new(@form) %>
      <% else %>
        <%= render Gustwave::Form::RichText::Trix::Button.new(action, disabled: disabled?(action)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
