<%= render Form::BaseFieldComponent.new(@form, @attribute, @label, **@options) do %>
  <%= render CoordinatorAssignment::AssignedListComponent.new do |list| %>
    <% list.with_coordinators(@form.object.coordinators) %>
  <% end %>
  <%= render CoordinatorAssignment::EditButtonComponent.new %>
<% end %>

<%= content_for :modal do %>
  <%= render CoordinatorAssignment::ModalComponent.new(selected: @form.object.coordinators, options: @form.object.coordinator_options) %>
<% end %>
