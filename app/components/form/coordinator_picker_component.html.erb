<%= render Form::BaseFieldComponent.new(@form, @attribute, @label, **@options) do %>
  <%= render Form::CoordinatorPicker::AssigneeComponent.new(@form.object.coordinators) %>
  <%= render ButtonComponent.new(
        scheme: :alternative,
        id: "edit-coordinator-assignment",
        data: {
          "modal-target": Form::CoordinatorPicker::ModalComponent::ID,
          "modal-show": Form::CoordinatorPicker::ModalComponent::ID
        },
        class: "w-full",
        type: :button).with_content("Ansprechpersonen bearbeiten") %>
<% end %>

<%= content_for :modal do %>
  <%= render Form::CoordinatorPicker::ModalComponent.new(assigned: @form.object.coordinators, suggestions: @form.object.coordinator_options) %>
<% end %>
