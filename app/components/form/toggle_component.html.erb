<%= render Form::BaseFieldComponent.new(@form, @attribute, @label) do %>
  <label class="inline-flex items-center mb-5 cursor-pointer">
    <%= @form.check_box @attribute, { class: "sr-only peer" }, '1', '0' %>
    <%= checked_state_text_slot if checked_state_text_slot? %>
    <%= tag.span **@options %>
    <%= unchecked_state_text_slot if unchecked_state_text_slot? %>
  </label>
<% end %>
