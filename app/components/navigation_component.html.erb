<nav class="min-w-[320px] bg-white border-gray-200 dark:bg-gray-900">
  <div class="max-w-screen-lg flex flex-wrap items-center justify-between mx-auto p-4">
    <%# Application logo and label %>
    <%= logo %>
    <%# Login button and user menu %>
    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <% if helpers.user_signed_in? %>
        <%= render AvatarComponent.new(
          src: helpers.current_user.avatar_url,
          alt: helpers.current_user.name,
          size: :medium,
          classes: "p-1 ring-2 ring-gray-300 dark:ring-gray-500"
        ) %>
      <% else %>
        <% if login_button? %>
          <%= form_tag user_rocketchat_omniauth_authorize_path, method: :post do %>
            <%= login_button %>
          <% end %>
        <% end %>
      <% end %>
      <%# Hamburger menu %>
      <% hamburger_breakpoint = "md" %>
      <button data-collapse-toggle="navbar-cta" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg <%= hamburger_breakpoint %>:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-cta" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
      </button>
    </div>
    <% if links? %>
      <div class="items-center justify-between hidden w-full <%= hamburger_breakpoint %>:flex <%= hamburger_breakpoint %>:w-auto <%= hamburger_breakpoint %>:order-1" id="navbar-cta">
        <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
          <% links.each do |link| %>
            <li><%= link %></li>
          <% end %>
          <% if helpers.user_signed_in? %>
            <li class="<%= hamburger_breakpoint %>:hidden"><%= button_to "Abmelden", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
          <% else %>
            <li class="<%= hamburger_breakpoint %>:hidden"><%= button_to "Anmelden", user_rocketchat_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</nav>
