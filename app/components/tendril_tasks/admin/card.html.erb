<%# Admin Menu Card %>
<li class="w-full border border-gray-200 bg-white rounded-lg shadow-md dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
  <div class="p-6 space-y-4 md:space-y-6 sm:p-8 flex flex-col h-full">
    <%= heading_slot %>
    <div class="flex-grow">
      <% paragraphs.each do |paragraph_slot| %>
        <%= paragraph_slot %>
      <% end %>
      <%= content %>
    </div>
    <div class="grid grid-cols-1">
      <% buttons.each do |button_slot| %>
        <%= button_slot %>
      <% end %>
    </div>
  </div>
</li>
