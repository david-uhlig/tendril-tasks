<footer class="mt-auto bg-white dark:bg-gray-900 shadow-inner">
  <div class="mx-auto w-full max-w-screen-lg p-4 py-6 lg:py-8">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0">
        <div class="mb-4">
          <a href="https://github.com/david-uhlig/tendril-tasks" class="flex items-center">
            <%= render Gustwave::Svg.new("brand/logo.svg", class: "me-2 h-8") %>
            <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Tendril Tasks</span>
            <%= render Gustwave::Badge.new("0.2.3", scheme: :dark, size: :sm, pill: true, class: "ms-2") %>
          </a>
        </div>
        <div class="ms-1.5 me-2 text-gray-500 dark:text-gray-400 font-medium">
          <%= render Gustwave::Icon.new(:github,
                                        theme: :solid,
                                        size: :sm,
                                        position: :standalone,
                                        class: "inline-flex align-center") %>
          <a href="https://github.com/david-uhlig/tendril-tasks" class="hover:underline">Open-Source-Software</a> mit ❤️ entwickelt von <a href="https://bsky.app/profile/duhlig.bsky.social" class="hover:underline whitespace-nowrap">David Uhlig</a>
        </div>
      </div>
      <%# Sitemap links %>
      <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3" dir="rtl">
        <%# Legal link block %>
        <% if data.legal.present? %>
          <div dir="ltr">
            <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"><%= t("footer.link_sections.legal") %></h2>
            <ul class="text-gray-500 dark:text-gray-400 font-medium">
              <% data.legal.each do |slug| %>
                <li class="mb-4 overflow-hidden truncate">
                  <%= link_to legal_path(slug), class: "hover:underline" do %>
                    <%= t("pages.#{slug}.title") %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <% data.sitemap.each do |category| %>
          <div dir="ltr">
            <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"><%= category["title"] %></h2>
            <ul class="text-gray-500 dark:text-gray-400 font-medium space-y-4">
              <% category["links"].each do |link| %>
                <li>
                  <%= link_to link["title"],
                              link["href"],
                              class: "hover:underline"
                  %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
    <% if data.copyright.present? || @social_media_links.present? %>
      <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
      <div class="sm:flex sm:items-center sm:justify-between">
            <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">
              <%= data.copyright %>
            </span>
        <%# TODO configurable social media icons with links %>
        <div class="flex mt-4 sm:justify-center sm:mt-0">&nbsp;</div>
      </div>
    <% end %>
  </div>
</footer>
