<%= render ContentComponent.new(width: :large) do %>
  <%= render BreadcrumbComponent.new do |breadcrumb| %>
    <% breadcrumb.section("Start", href: root_path, icon: :home) %>
    <% breadcrumb.section("Projekte", href: projects_path) %>
    <% breadcrumb.section(@project_form.title, href: project_path(@project_form.project)) %>
    <% breadcrumb.section("Bearbeiten") %>
  <% end %>

  <%= render HeadingComponent.new(tag: :h1, scheme: :secondary).with_content("Projekt bearbeiten") %>

  <%= render 'form', form_object: @project_form %>
<% end %>
