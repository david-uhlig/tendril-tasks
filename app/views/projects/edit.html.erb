<%= render ContentComponent.new(width: :large) do %>
  <%= render TendrilTasks::Breadcrumb.new do |breadcrumb| %>
    <% breadcrumb.home %>
    <% breadcrumb.item(Project.model_name.human(count: 2), href: projects_path) %>
    <% breadcrumb.item(@project_form.title, href: project_path(@project_form.project)) %>
    <% breadcrumb.item(t("forms.edit")) %>
  <% end %>

  <%= render HeadingComponent.new(tag: :h1, scheme: :secondary)
               .with_content(t ".title") %>

  <%= render 'form', form_object: @project_form %>
<% end %>
