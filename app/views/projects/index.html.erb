<% case @projects.size %>
<% when 0 %>
  <h1 class="text-center mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Aktuell keine <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Projekte</span>!</h1>
<% when 1 %>
  <h1 class="text-center mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Mach mit bei diesem <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Projekt</span>!</h1>
<% else %>
  <h1 class="text-center mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Mach mit bei <%= @projects.size %> <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Projekten</span>!</h1>
<% end %>

<hr class="hidden sm:flex h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">

<% case @projects.size %>
<% when 0 %>
  <p class="mb-6 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400">Unsere fleißigen Mitglieder haben sich aller Aufgaben angenommen. Juhu! Schau doch später wieder vorbei.</p>
<% else %>
  <% @projects.each do |project| %>
    <%= render ProjectSectionComponent.new(project) %>
  <% end %>
<% end %>
