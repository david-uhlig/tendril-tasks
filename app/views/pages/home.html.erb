<%= render TendrilTasks::Content.new do %>
  <%= render TendrilTasks::Heading.new(
               tag: :h1,
               scheme: :level1,
               class: "text-center") do %>
    <%= render ::Text::Highlight::GradientComponent.new(
      t(".title"),
      highlight: t(".title_highlight")
    ) %>
  <% end %>
  <% paragraphize(t(".hero")).each do |paragraph| %>
    <%= render TendrilTasks::Paragraph.new(class: "mb-6 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400") do %>
      <%= paragraph %>
    <% end %>
  <% end %>

  <% if user_signed_in? %>
    <%# CTA to projects and tasks %>
    <%= render "pages/home/cta_when_signed_in" %>
  <% else %>
    <%# CTA with login button %>
    <%= render "pages/home/cta_when_signed_out" %>
  <% end %>
<% end %>
