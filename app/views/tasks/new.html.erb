<%= render TendrilTasks::Content.new(width: :large) do %>
  <%= render TendrilTasks::Breadcrumb.new do |breadcrumb| %>
    <% breadcrumb.home %>
    <% breadcrumb.item(Task.model_name.human(count: 2), href: tasks_path) %>
    <% breadcrumb.item(@task_form.project.title,
                          href: project_path(@task_form.project)) if @task_form.project.present? %>
    <% breadcrumb.item(t("breadcrumbs.new")) %>
  <% end %>

  <%= render TendrilTasks::Heading
               .new(tag: :h1)
               .with_content(t(".title"))
  %>

  <%= render 'form', form_object: @task_form %>
<% end %>
