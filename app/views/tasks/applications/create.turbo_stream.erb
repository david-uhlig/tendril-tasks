<% case @origin %>
<% when :index %>
  <%# Update the task card %>
  <turbo-stream action="replace" method="morph" target="task-card-<%= @task.id %>">
    <template>
      <%= render TaskCardComponent.new(@task) %>
    </template>
  </turbo-stream>
<% when :show %>
  <%# Update the application section %>
  <turbo-stream action="replace" method="morph" target="task-application">
    <template>
      <%= render partial: "tasks/application", locals: { task: @application.task } %>
    </template>
  </turbo-stream>

  <%# Update application entry %>
  <turbo-stream action="replace" method="morph" target="task-application-<%= @application.user.id %>">
    <template>
      <%= render TaskApplicationComponent.new(@application) %>
    </template>
  </turbo-stream>
<% end %>

<%# Issue a toast notification %>
<%= render TurboStream::NotificationComponent
             .new("Vielen Dank! Wir haben deine Meldung erhalten und setzen uns mit dir in Kontakt.") %>
