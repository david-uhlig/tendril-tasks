<%# Update the application section %>
<turbo-stream action="replace" method="morph" target="task-application">
  <template>
    <%= render partial: "tasks/application", locals: { task: @task } %>
  </template>
</turbo-stream>

<%# Update application entry %>
<turbo-stream action="replace" method="morph" target="task-application-<%= @application.user.id %>">
  <template>
    <%= render TaskApplicationComponent.new(@application) %>
  </template>
</turbo-stream>

<%# Issue a toast notification %>
<% if @updated %>
  <%= render TurboStream::NotificationComponent
               .new("Vielen Dank! Wir haben deine Meldung aktualisiert.") %>
<% else %>
  <%= render TurboStream::NotificationComponent.new("Wir konnten deine Meldung leider nicht mehr aktualisieren.") %>
<% end %>
