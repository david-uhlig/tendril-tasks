<%= render ContentComponent.new(width: :large) do %>
  <%= render BreadcrumbComponent.new do |breadcrumb| %>
    <% breadcrumb.home %>
    <% breadcrumb.section("Aufgaben", href: tasks_path) %>
    <% breadcrumb.section(@task_form.title, href: task_path(@task_form.task)) %>
    <% breadcrumb.section("Bearbeiten") %>
  <% end %>

  <%= render HeadingComponent.new(tag: :h1, scheme: :secondary).with_content("Aufgabe bearbeiten") %>

  <%= render 'form', form_object: @task_form %>
<% end %>
