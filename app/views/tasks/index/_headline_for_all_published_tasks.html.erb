<%# Renders the headline when no filter is applied on the index page %>
<%= render HeadingComponent.new(tag: :h1,
                                scheme: :tertiary,
                                class: "font-extrabold text-center") do
%>
  <%= render ::Text::Highlight::GradientComponent
               .new(t(".title",
                      count: count),
                    highlight: t(".title_highlight",
                                 count: count))
  %>
<% end %>
