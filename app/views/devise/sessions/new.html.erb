<%= render ContentComponent.new do %>
  <%= render HeadingComponent
               .new(tag: :h1,
                    schema: :secondary,
                    class: "text-center")
               .with_content(t ".welcome_back")
  %>
  <%= tag.p t(".content", brand: t("rocketchat.brand")),
            class: "mb-6 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400"
  %>
  <%= form_tag user_rocketchat_omniauth_authorize_path, method: :post, class: "text-center" do %>
    <%= tag.span t(".click_here_to_start"),
                 class: "font-mono pe-5"
    %>
    <%= render ButtonComponent.new(
      type: :submit,
      scheme: :duotone_purple_to_blue,
      size: :extra_large,
      class: "mt-4",
      data: { turbo: false }) do |login_button| %>
      <% login_button.with_leading_visual("rocketchat/icon-white.svg") %>
      <%= t(".login_with_rocket_chat_button", brand: t("rocketchat.brand")) %>
    <% end %>
  <% end %>
<% end %>
