<%= render TendrilTasks::Content.new do %>
  <%= render TendrilTasks::Heading
               .new(tag: :h1,
                    class: "text-center")
               .with_content(t ".welcome_back")
  %>
  <%= tag.p t(".content", brand: RocketChatConfig.branding),
            class: "mb-6 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400"
  %>
  <%= form_tag user_rocketchat_omniauth_authorize_path, method: :post, class: "text-center" do %>
    <%= tag.span t(".click_here_to_start"),
                 class: "font-mono pb-3 pe-5 inline-flex"
    %>
    <%= render Gustwave::Button.new(
      type: :submit,
      theme: :gradient_duotone,
      scheme: :purple_to_blue,
      size: :xl,
      class: "mt-4",
      data: { turbo: false }) do |login_button|
    %>
      <% login_button.leading_svg("rocketchat/icon-white.svg") %>
      <%= t(".login_with_rocket_chat_button", brand: RocketChatConfig.branding) %>
    <% end %>
  <% end %>
<% end %>
